<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">

    <!--主要的外贸入口-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="550px"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:weightSum="2">

        <!--主粮 零食 日用品 兑换专区-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/zhuliang"/>

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/lingshi"/>

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/riyongpin"/>

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/duihuanzhuanqu"/>


        </com.zhy.autolayout.AutoLinearLayout>

        <!--医疗 保健 玩具 领券中心-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/yiliao"/>

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/baojian"/>

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/wanjv"/>

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/lingquanzhongxin"/>


        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:background="@color/colorF0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        />

    <TextView
        android:gravity="center_vertical|right"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="55px"
        android:text="查看更多>>"
        android:paddingRight="5dp"
        android:textColor="@color/gl_background"
        android:textSize="12sp"
        />

    <View
        android:background="@color/colorF0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        />

    <View
        android:layout_marginTop="10dp"
        android:background="@color/colorF0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/header_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"/>

</com.zhy.autolayout.AutoLinearLayout>
