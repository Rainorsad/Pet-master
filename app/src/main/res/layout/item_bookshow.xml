<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_book"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:paddingBottom="40dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dongman1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_toRightOf="@+id/img_book"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_bookname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="傅雷家书"
            android:textColor="@color/black_101010"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="作者： 傅雷"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_precc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="出版社： 译林出版社"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/book_nowprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 56.00"
                android:textColor="#da000a"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                >

                <TextView
                    android:id="@+id/book_oldprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ 28.29"
                    android:textColor="@color/gl_background"
                    android:textSize="12sp"
                    />

                <View
                    android:layout_width="30dp"
                    android:layout_height="1dp"
                    android:background="@color/gl_background"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_evaluation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            />
    </LinearLayout>
</RelativeLayout>