<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#0ABFFA"
    >

    <RelativeLayout
        android:id="@+id/back_rl"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        >

        <ImageView
            android:id="@+id/chat_back"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@mipmap/back"
            />

        <TextView
            android:id="@+id/chat_text"
            android:layout_toRightOf="@id/chat_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="25dip"
            android:singleLine="true"
            android:maxEms="17"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="好班"
            android:visibility="gone"
            />

        <!-- android:text="一二三四五六七八九十一二三四五六七八九十" -->

        <ImageView
            android:id="@+id/iv_clas_red_dot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignTop="@+id/chat_text"
            android:layout_toRightOf="@id/chat_text"
            android:background="@mipmap/icon_red_dot"
            android:visibility="gone"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/back_rl"
        android:layout_alignParentLeft="true"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dip"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:text="班聊"
                android:visibility="gone"
                />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <TextView
            android:id="@+id/chat_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxEms="12"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        >

        <ImageView
            android:id="@+id/fri_plus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="false"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:src="@mipmap/more_add"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/fri_friend"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="centerInside"
            android:clickable="true"
            android:contentDescription="通讯录"
            android:focusable="false"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/fri_plus"
            android:layout_marginRight="20dp"
            android:src="@mipmap/lianxiren"
            android:visibility="gone"
             />

        <ImageView
            android:id="@+id/newfriend_icon"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginRight="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/fri_friend"
            android:layout_alignRight="@+id/fri_friend"
            android:background="@mipmap/icon_red_dot"
            android:visibility="gone"
            />

        <!-- android:visibility="gone"  android:layout_toLeftOf="@+id/titlebar_plus"
        android:layout_toLeftOf="@+id/fri_plus"
        -->

        <TextView
            android:id="@+id/right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:textColor="#FF000000"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <Button
            android:id="@+id/showallphoto_ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:textColor="#fff"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/titlebar_teaminfo"
            android:layout_width="30dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="false"
            android:scaleType="centerInside"
            android:src="@mipmap/teaminfo"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/gp_icon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/titlebar_teaminfo"
            android:layout_alignRight="@+id/titlebar_teaminfo"
            android:background="@mipmap/icon_red_dot"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/titlebar_userinfo"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="false"
            android:scaleType="centerInside"
            android:src="@mipmap/lianxiren"
            android:visibility="gone"
            />

        <RelativeLayout
            android:id="@+id/rl_userdel"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/titlebar_userdel"
                android:layout_width="21dp"
                android:layout_height="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="0dp"
                android:clickable="true"
                android:contentDescription="@null"
                android:focusable="false"
                android:scaleType="centerInside"
                android:src="@mipmap/deluser"

                />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/chat_title_below"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#ededed"
        android:visibility="gone"
        />

</RelativeLayout>